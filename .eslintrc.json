{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["standard", "prettier/@typescript-eslint", "prettier/standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint/eslint-plugin", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "space-before-function-paren": "off"
  }
}
