{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "outDir": "./dist",
    "rootDir": "./src",

    "removeComments": true,

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
